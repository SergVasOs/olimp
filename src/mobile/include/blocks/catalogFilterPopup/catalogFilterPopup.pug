include /include/blocks/catalog/catalogFilters/catalogFilters

mixin catalogFilterPopup
	+b#popup_filters.popup._layer
		+e.overlay
		+e.body
			+b.icon._xl.__close
				include /assets/images/xl/crossIcon.svg
			+e.header Фильтр
			+b.__content
				+b.catalogFilterPopup.__wrapper
					+b.__view
						+e.label Вид
						+e.items
							+e.item._active(href='catalog-grid.html')
								+b.icon._lg
									include /assets/images/lg/viewGridIcon.svg
							+e.item(href='catalog-list.html')
								+b.icon._lg
									include /assets/images/lg/viewListIcon.svg
							+e.item(href='catalog-table.html')
								+b.icon._lg
									include /assets/images/lg/viewTableIcon.svg
					+b.__sort
						+e.label Сортировка
						+b.__swiper.swiper-container
							+b.__wrapper.swiper-wrapper
								+b.__item._active.swiper-slide(href='catalog-grid.html')
									+e.text Цена
									+b.icon._lg.__icon
										include /assets/images/lg/triangleIcon.svg
								+b.__item.swiper-slide(href='catalog-grid.html')
									+e.text Новизна
									+b.icon._lg.__icon
										include /assets/images/lg/triangleIcon.svg
								+b.__item.swiper-slide(href='catalog-grid.html')
									+e.text Рейтинг
									+b.icon._lg.__icon
										include /assets/images/lg/triangleIcon.svg
					+catalogFilters
