include /include/elements/labels/labels
include /include/elements/dots/dots
include /include/elements/buyButton/buyButton
include /include/elements/upgradeButton/upgradeButton
include /include/blocks/product/productDeliveryInfo/productDeliveryInfo
include /include/blocks/product/productUpgrades/productUpgrades
include /include/blocks/product/productDescription/productDescription
include /include/sections/product/productTags/productTags
