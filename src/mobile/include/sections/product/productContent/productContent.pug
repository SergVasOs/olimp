include /mobile/include/sections/catalog/setList/setList
include /mobile/include/sections/catalog/productList/productList
include /mobile/include/sections/catalog/viewedList/viewedList

mixin productContent
	+b.productContent
		+e.box.box._full
			+b.__gallery
				+labels
				+e.img(src='images/product1.png')
				+dots
			+b.__tabs
				+e.item._active Фотографии
				+e.item Нанесение и комплект
				+e.item Готовые решения
		+e.box.box
			+size._lg
		+b.__popup
			+e.body
				+e.handler
				+b.__short
					+e.box.box
						+e.name Стеклянная награда J42-115 с цветным нанесением, высота 11.5 см
						+e.info
							+e.price от 3 249 ₽ / шт
							+e.material Пластик
						+e.buttons
							+upgradeButton._lg.__upgradeButton
							+buyButton('В корзину')._lg.__buyButton
				+b.__full
					+b.__menu
						+e.item._active Характеристики
						+e.item Описание
						+e.item Все свойства
					+b.__buy
						+e.box.box
							+e.label Стоимость за шт:
							+e.price 17,631 руб
							+b.button._green._lg
								+e.text Положить в корзину
					+e.box.box
						+size._lg.__size
						+b.__card
							+e.img(src='images/catalogItem.png')
							+e.info
								+e.sku Артикул: 271508
								+e.name Кубок B368-3, высота 36 см
								+e.price 3 249 ₽ / шт
						+b.__icon
							+b.icon._md
								include /assets/images/plusIcon.svg
						+productUpgrades
						+b.__icon
							+b.icon._md
								include /assets/images/crossIcon.svg
						+productEdition
						+b.__icon
							+b.icon._md
								include /assets/images/equalIcon.svg
						+b.__total
							+b.TABLE.__info
								+b.THEAD.__header
									+e.TD.col._label
									+e.TD.col._thing за 1 шт
									+e.TD.col._total за 238 шт
								+b.TR.__row
									+e.TD.col._label Аксессуары:
									+e.TD.col._thing 840 ₽
									+e.TD.col._total 840 ₽
								+b.TR.__row
									+e.TD.col._label Нанесение:
									+e.TD.col._thing 1 683 ₽
									+e.TD.col._total 1 683 ₽
								+b.TR.__row
									+e.TD.col._label._sum Итого:
									+e.TD.col._thing 1 683 ₽
									+e.TD.col._total 336 422₽
							+buyButton('Добавить в корзину')._xl.__buyButton
						+productDeliveryInfo.__productDeliveryInfo
					+setList('Готовые работы').__setList
					+e.box.box
						+productVariants.__productVariants
						+productDescription.__productDescription
						+productCategories
					+productList('Посмотрите аналоги').__analog
					+productList('С этим товаром заказывают').__relative
					+e.box.box
						+productProperties
						+productTags
					+viewedList.__viewed
					+e.box.box
						+b.button._xl._lightGray.__helpButton(href='#')
							+e.text Нужна помощь?
