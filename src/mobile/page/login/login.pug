extends /mobile/layout/layout
include /include/blocks/common/pageHead/pageHead

block append pageVars
	- var pageTitle = "Авторизация";
	- var pageClass = "login";
	- var hideFooter = true;

block content
	+pageHead('Вход в аккаунт', false)._noIcons.__head
	.box
		+b.FORM.form.__form
			+e.row
				+b.input._lg._hasError
					+e.INPUT.field(type='text', placeholder='E-mail', required)
					+b.icon
						include /assets/images/md/alertIcon.svg
			+e.row
				+b.input._lg
					+e.INPUT.field(type='password', placeholder='Пароль', required)
			+e.footer
				+b.button._lg._blue(href='#') Войти
				+b.button._lg._white(href='registration.html') Регистрация
		+b.links.__links
			+e.item
				+e(href='forgot-password.html') Забыли свой пароль?
