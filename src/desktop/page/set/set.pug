									+e.img(src=(shirt ? 'images/shirt.png' : 'images/catalogItem.png'))
								+b.__slide.swiper-slide
									+e.img(src=(shirt ? 'images/shirt.png' : 'images/catalogItem.png'))
								+b.__slide.swiper-slide
									+e.img(src=(shirt ? 'images/shirt.png' : 'images/catalogItem.png'))
