					+e.items
						+compositionItem('set')
						+compositionItem('set')
						+compositionItem('set')
			+e.right
				+b.__buy.fixing
					+e.corner(src="images/corner.png")
					+b.__total
						+e.label Итоговая сумма:
						+e.oldPrice 9 523 р.
						+e.price 2 523 р.
					+b.__items
						+b.__item
							+e.label Cтоимость товара:
							+e.price 840 р.
						+b.__item
							+e.label Cтоимость аксессуаров:
							+e.price 840 р.
						+b.__item
							+e.label Cтоимость нанесения:
							+e.price 840 р.
					+e.buttons
						+b.button._lg._blue
							+e.text Комплектация
						+buyButton('Заказать весь комплект')._lg.__buyButton
					+bestDelivery
