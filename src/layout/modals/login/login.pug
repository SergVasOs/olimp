+b#modal_login.modal
	+e.area
		+e.overlay
		+e.trick &#8203;
		+e.box
			+e.body
				+e.title Вход в личный кабинет
				+e.content
					+b.form
						+e.row
							+b.input(type='text', placeholder='Логин')
						+e.row
							+b.input(type='password', placeholder='Пароль')
						+e.row
							+b.button Войти
